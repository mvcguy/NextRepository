
@model List<NextRepository.WebSample.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h3>@ViewData["RepoType"]</h3>
<div class="row">
    <h2 class="col-md-2">@ViewData["Title"].</h2>
    <a class="btn btn-primary btn-lg pull-right" a asp-controller="Home" asp-action="CreateProduct">New</a>
</div>
<hr />

<div class="row">
    <form asp-controller="Home" asp-action="Search" method="post" class="form-inline">
        <div class="form-group">
            <div class="col-md-10">
                <input name="query" id="query" class="form-control" placeholder="search products..." />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Search</button>
            </div>
        </div>
    </form>
</div>
<hr />
<div class="row">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                </tr>
            }

        </tbody>
    </table>

</div>
