
@model List<NextRepository.WebSample.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["RepoType"]</h3>

<hr />
<a class="btn btn-primary btn-lg" a asp-controller="Home" asp-action="CreateProduct">New</a>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
            </tr>
        }

    </tbody>
</table>